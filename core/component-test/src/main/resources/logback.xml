<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS,Z} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="uk.gov.dwp" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.apache.activem" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!--<logger name="org.apache.cxf.interceptor" level="warn" additivity="false">-->
        <!--<appender-ref ref="STDOUT" />-->
    <!--</logger>-->

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>